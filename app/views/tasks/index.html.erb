<div class="text-center">
  <h1>タスク一覧</h1>
</div>

<% if logged_in? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
　　<tbody>
    <% @tasks.each do |task| %>
    　<tr>
      　　<td><%= link_to task.id, task %></td>
         <td><%= task.status %></td>
         <td><%= task.content %></td>
      </tr>
  　<% end %>

　　</tbody>
  </table>
  <div>
   <%= paginate @tasks %>
  </div>
<% end %>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
<%= link_to 'タスクの投稿', new_path, class: "btn btn-primary btn-block" %>
  </div>
</div>
